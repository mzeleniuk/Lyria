<div class="container m-t-lg">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="panel panel-primary">
        <div class="panel-heading text-center">
          <h3 class="panel-title">
            <%= @room.title %>
          </h3>

          <span class="small">
            <%= @room.description %>
          </span>
        </div>

        <div class="panel-body">
          <div id="messages" data-room-id="<%= @room.id %>">
            <%= render @room.messages %>
          </div>
        </div>
      </div>

      <%= form_for @message, url: '#' do |f| %>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-comment" aria-hidden="true"></i>
            </span>

            <%= f.text_area :body, class: 'form-control', placeholder: 'Your message...', required: true %>
          </div>

          <small class="text-muted">From 2 to 1000 characters</small>
        </div>

        <%= f.submit 'Post', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
