<h1><%= @room.title %></h1>

<div class="messages">
  <%= render @room.messages %>
</div>

<%= form_for @message, url: '#' do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %>

      <small class="text-muted">From 2 to 1000 characters</small>
    </div>

    <%= f.submit 'Post', class: 'btn btn-primary' %>
<% end %>
